{
  "name": "edusafe-monorepo",
  "version": "1.0.0",
  "description": "EduSafe - Educational Management Platform (Monorepo)",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "npm run dev -w apps/backend",
    "dev:frontend": "npm run dev -w apps/frontend",
    "build": "turbo run build",
    "build:backend": "npm run build -w apps/backend",
    "build:frontend": "npm run build -w apps/frontend",
    "start": "npm run start -w apps/backend",
    "start:frontend": "npm run start -w apps/frontend",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amelianahardianti/edusafe.git"
  },
  "bugs": {
    "url": "https://github.com/Amelianahardianti/edusafe/issues"
  },
  "homepage": "https://github.com/Amelianahardianti/edusafe#readme"
}
