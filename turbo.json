{
  "$schema": "https://turbo.build/schema.json",
  "version": "2",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
